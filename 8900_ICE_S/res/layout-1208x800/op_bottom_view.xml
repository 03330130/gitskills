<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/layout_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/op_bottom_tab_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_op_auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/auto_massage" 
            android:textSize="@dimen/textsize_Large"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/op_bottom_bar_divider" />

         <Button
            android:id="@+id/btn_op_manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/manual_massage" 
             android:textSize="@dimen/textsize_Large"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/op_bottom_bar_divider" />

         <Button
            android:id="@+id/btn_op_pressure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/holographic_hand_massage"
             android:textSize="@dimen/textsize_Large" />

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/op_bottom_bar_divider" />

          <Button
            android:id="@+id/btn_op_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/other_massage" 
             android:textSize="@dimen/textsize_Large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_above="@id/layout_nav"
        android:layout_alignLeft="@id/layout_nav"
        android:layout_alignRight="@id/layout_nav" >

        <FrameLayout
            android:id="@+id/auto_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/op_auto_bg" 
            android:layout_weight="1"
            >
                <!--  <ListView
                android:id="@+id/lv_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                />--> 
                <include android:id="@+id/ckb_auto" layout="@layout/op_auto_ckb_item"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/manual_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:visibility="invisible"
            android:background="@drawable/op_auto_bg" >

            <include 
                android:id="@+id/ckb_manual"
                layout="@layout/op_ckb_manual_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pressure_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:visibility="invisible"
            android:background="@drawable/op_auto_bg" >
            <ListView 
                android:id="@+id/lv_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              ></ListView>
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/manual_mode_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:visibility="gone"
            android:background="@drawable/op_auto_bg" >
            	<ListView 
	        android:id="@+id/lv_mode"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scrollbars="none">
       		 </ListView>
       		 <ImageView 
       		     android:layout_width="wrap_content"
       		     android:layout_height="wrap_content"
       		     android:src="@drawable/img_auto_down_arrow"
       		     android:layout_gravity="bottom|center_horizontal"
       		     />
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/manual_part_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:visibility="gone"
            android:background="@drawable/op_auto_bg" >
         	<include  
         	 android:id="@+id/ckb_part"
             layout="@layout/op_part_ckb_item"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
        </FrameLayout>
        
         <FrameLayout
            android:id="@+id/bottom_wide_speed_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:visibility="gone"
             >
         	<include  
         	 android:id="@+id/manual_speed_width_layout"
             layout="@layout/op_wide_speed_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/other_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:visibility="invisible"
            android:background="@drawable/op_auto_bg" >
             <include android:id="@+id/ckb_other" layout="@layout/op_other_ckb_item"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
         <FrameLayout 
            android:id="@+id/pressrue_speeds_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            >
            <include android:id="@+id/tv_pressure_speed"
                layout="@layout/op_pressure_speed_layout"
                 android:layout_width="match_parent" 
                 android:layout_height="match_parent">
            </include>
            </FrameLayout>
    </LinearLayout>

</RelativeLayout>